@model IEnumerable<Backoffice0._1.Models.C_pedidos>
@using System.Web.Mvc.Html;
@foreach (var item in Model)
{
    <h3>Datos del pedido</h3>
    <span> @item.id_pedido</span><span> @Convert.ToDateTime(item.fecha_pedido).ToString("hh:mm:ss")</span>
    <br />
    if (item.C_clientes.nombre != "")
    {
        <span>Cliente: @item.C_clientes.nombre </span>
    }
    if (item.id_tipo_entrega == 1)
    {
        <span>Cliente: Mostrador </span>
    }
    <br />
    <span>Direccion: <br /> Lerdo, Dgo </span><br />
}

