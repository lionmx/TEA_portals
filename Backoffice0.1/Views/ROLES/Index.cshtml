            @Html.ActionLink("Usuarios", "Index", "USUARIOS", null, new { @class = "w3-bar-item w3-button" })
            @Html.ActionLink("Configuracion", "Configuracion", "Configuracion", null, new { @class = "w3-bar-item w3-button" })
        </nav>
    </div>
</header>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           <label class="MakeWide">  @Html.DisplayNameFor(model => model.DESCRIPCION)</label>
        </th>
        <th>
            <label class="MakeWide"> @Html.DisplayNameFor(model => model.CS_perfiles.DESCRIPCION)</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <label class="MakeWide"> @Html.DisplayFor(modelItem => item.DESCRIPCION)</label>
            </td>
            <td>
                <label class="MakeWide"> @Html.DisplayFor(modelItem => item.CS_perfiles.DESCRIPCION)</label>
            </td>
            <td>
                <label class="MakeWide">
                @Html.ActionLink("Edit", "Edit", new { id = item.ID_ROL }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID_ROL }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID_ROL })</label>
            </td>
        </tr>
    }

</table>
