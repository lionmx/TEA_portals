@model IEnumerable<Backoffice0._1.Models.C_pedidos>
<table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Folio</th>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Total</th>
            <th>Status</th>
            <th>Sucursal</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @{foreach (var item in Model)
            {
                <tr>
                    <td>@item.id_pedido</td>
                    @if (@item.id_cliente.HasValue)
                    {
                        <td>@item.C_clientes.nombre</td>
                    }
                    else
                    {
                        <td>MOSTRADOR</td>
                    }

                    <td>@Convert.ToDateTime(item.fecha_pedido).ToString("dd/MM/yyyy")</td>
                    <td>@Convert.ToDateTime(item.fecha_pedido).ToString("hh:mm:ss")</td>
                    <td>@item.monto</td>
                    @if (@item.id_tracking_status == 1)
                    {
                        <td> <a href="#" class="btn btn-danger btn-xs"> Recibido</a></td>
                    }
                    @if (@item.id_tracking_status == 2)
                    {
                        <td> <a href="#" class="btn btn-info btn-xs"> En cocina</a></td>
                    }
                    @if (@item.id_tracking_status == 3)
                    {
                        <td> <a href="#" class="btn btn-primary btn-xs"> Por asignar</a></td>
                    }
                    @if (@item.id_tracking_status == 4)
                    {
                        <td> <a href="#" class="btn btn-warning btn-xs"> En transito</a></td>
                    }
                    @if (@item.id_tracking_status == 5)
                    {
                        <td> <a href="#" class="btn btn-success btn-xs"> Entregada</a></td>
                    }
                    @if (@item.id_tracking_status == 6)
                    {
                        <td> <a href="#" class="btn btn-danger btn-xs"> Cancelada</a></td>
                    }
                    <td>@item.C_sucursales.nombre</td>
                    <td><a href="#" class="btn btn-danger btn-xs"> <i class="fa fa-search"></i></a> </td>
                </tr>
            }
        }

    </tbody>
</table>