@model IEnumerable<Backoffice0._1.Models.C_grupo_productos_g>
@using System.Web.Mvc.Html;
@foreach (var item in Model)
{
    <a onclick="">
        <div class="col-md-55">
            <div class="thumbnail">
                <div class="image view view-first" onclick="ConsultaDetallesCombo(@item.id_grupo_productos)"data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target=".configura_combo">
                    <img style="width: 100%; display: block;" src="@item.banner_pos" alt="image" />
                </div>
                <div>
                    <label><strong>@Html.DisplayFor(modelItem => item.nombre)</strong></label> <br />
                    <label><strong>@Html.DisplayFor(modelItem => item.precio_unico)</strong></label> 
                </div>
            </div>
        </div>
    </a>
}
