@model IEnumerable<Backoffice0._1.Models.C_clientes_direccion>
@using System.Web.Mvc.Html;

@if (Model != null)
{
    foreach (var item in Model)
    {
    <tr class="even pointer">
    <td class="a-center ">
        <input type="radio" class="flat"  name="clientes" id="@item.id_cliente" onclick="ConsultaCostoEnvio(@item.C_direcciones_mx.id_colonia,'')"  value="@item.id_direccion">
    </td>
    <td>
        @{if (item.C_clientes.nombre != "")
            {
                <label style="color:black;">@item.C_clientes.nombre</label><br />
            }
            if (item.C_direcciones_mx.calle != "")
            {
                <label style="font-size:12px;color:black;">@item.C_direcciones_mx.calle</label>
                <label style="font-size:12px;color:black;">@item.C_direcciones_mx.numero_ext</label>

            }

            if (item.C_direcciones_mx.C_colonias_mx.d_asenta != "")
            {
                <label style="color:black;">Colonia: @item.C_direcciones_mx.C_colonias_mx.d_asenta</label>
                <label style="font-size:12px;color:black;">@item.C_direcciones_mx.C_colonias_mx.d_ciudad</label>
                <label style="font-size:12px;color:black;">,@item.C_direcciones_mx.C_colonias_mx.d_estado</label>

            }

            else
            {

            }
            <label style="font-size:12px;color:black;">@item.C_direcciones_mx.referencia</label>


        }
    </td>

        <td class=" "><i class="fa fa-pencil">Editar</i></td>
    </tr>
        }
    }
